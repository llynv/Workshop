<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>accounts</servlet-name>
        <servlet-class>controller.AccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.account.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addAccount</servlet-name>
        <servlet-class>addAccount</servlet-class>
    </servlet>
    <servlet>
        <!-- admin_controller -->
        <servlet-name>adminController</servlet-name>
        <servlet-class>controller.AdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminController</servlet-name>
        <url-pattern>/admin/admin_controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>accounts</servlet-name>
        <url-pattern>/accounts/testing</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>hostAddress</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>instanceName</param-name>
        <param-value>LINHLAPTOP</param-value>
    </context-param>
    <context-param>
        <param-name>dbName</param-name>
        <param-value>ProductIntro</param-value>
    </context-param>
    <context-param>
        <param-name>userName</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>userPass</param-name>
        <param-value>1</param-value>
    </context-param>
    <context-param>
        <param-name>dbPort</param-name>
        <param-value>1433</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addAccount</servlet-name>
        <url-pattern>/add_account</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
